.block
  = block_navigation(pre_event_navigation)

  .content
    = controls do |c|
      - add_button_to(c, "PDF Format", :format => :pdf)

    %h2 Checklist

    .inner
      - [:participants, :team, :facilitators].each do |role|
        = render "registrations", :registrations => registrations.send(role).by_first_name, :role => role

  = block_footer(registration_submodule_breadcrumbs << ['Checklist'])
