%table.table.table-striped
  %caption
    %h4= title
  %thead
    %tr
      %th.name Name
      %th Code
      %th Pay. Meth
      %th Acc. Name
      %th IBAN
      %th BIC
      %th
  %tbody
    - registrations.by_first_name.each do |r|
      %tr
        %td.name= link_to_show(office_event_registration_path(r.event, r), r.full_name)
        %td= r.registration_code
        %td= r.payment_method
        %td= [r.bank_account_name, r.bank_name].compact.join(' / ')
        %td= r.iban
        %td= r.bic
