%table.table.table-key-values
  %caption
    %h6 Registration Information
  %tbody
    %tr
      %th Role
      %td= registration.role
    %tr
      %th Gender
      %td= registration.gender
    %tr
      %th Special Requests
      %td= registration_requests(registration)
    %tr
      %th Notes
      %td= registration.notes

    - if Site.uk?
      %tr
        %th How Hear
        %td= registration.how_hear
      %tr
        %th Previous Event
        %td= registration.previous_event
      %tr
        %th Clothing Conversation
        %td= registration.clothing_conversation
      %tr
        %th Fee Received
        %td= registration.reg_fee_received

- if Site.uk?
  %table.table.table-key-values
    %caption
      %h6 Highest Workshop Information
    %tbody
      %tr
        %th Highest Level
        %td= registration.highest_level
      %tr
        %th Location
        %td= registration.highest_location
      %tr
        %th Date
        %td= registration.highest_date
