.panel.panel-default
  .panel-heading
    %h5 Language #{email.locale}
  .panel-body
    %dl
      %dt Subject
      %dd(ng-non-bindable)
        %pre= email.subject
      %dt Body
      %dd(ng-non-bindable)
        %pre= email.body
    - if email.audits.any?
      = render 'office/shared/audits', :audits => email.audits.descending