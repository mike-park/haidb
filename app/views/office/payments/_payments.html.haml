.row-fluid
  .span5
    %table.table.table-striped
      %caption
        %h6 Details
      %thead
        %tr
          %th Date
          %th Note
          %th.qty Amount
          %th
      %tbody
        - payments.each do |p|
          %tr
            %td.date= link_to_show(office_registration_payment_path(p.registration, p), l(p.paid_on))
            %td= p.note
            %td.qty= number_to_currency p.amount
            %td.link= link_to_destroy office_registration_payment_path(p.registration, p)
