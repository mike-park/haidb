= vertical_form [:office, @registration, @payment] do |f|
  -if @payment.errors.any?
    #error_explanation
      %h3= "#{pluralize(@payment.errors.count, "error")} prohibited this payment from being saved"

  = f.input :paid_on, :as => :string, input_html: {class: 'date-pick'}, :format => '%d.%m.%Y'
  = f.input :note
  = f.input :amount
  = f.button :submit
