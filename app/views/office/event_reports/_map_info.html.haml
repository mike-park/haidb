%table.table.table-striped
  %thead
    %tr
      %th Img
      %th Name
      %th Email
      %th Address
      %th Phones
  %tbody
    - registrations.each do |r|
      %tr
        %td= angel_icon(r.angel) if r.angel
        %td= link_to_show(office_registration_path(r), r.full_name)
        %td= r.email
        %td= simple_format(compact_address(r))
        %td= simple_format(compact_phones(r), {}, sanitize: false)
