%table.table.table-striped
  %caption
    %h4= pluralize(registrations.size, "#{status} #{role} Registration")
  %thead
    %tr
      %th.name Name
      %th Code
      %th Cost
      %th Pay. Meth
      %th Acc. Name
      %th IBAN
      %th BIC
  %tbody
    - registrations.by_first_name.each do |r|
      %tr
        %td.name= link_to_show(office_registration_path(r), r.full_name)
        %td= r.registration_code
        %td= local_currency r.cost
        %td= r.payment_method
        %td= [r.bank_account_name, r.bank_name].compact.join(' / ')
        %td= r.iban
        %td= r.bic
