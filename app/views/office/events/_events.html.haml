%table.table.table-striped
  %caption
    %h3= caption
  %thead
    %tr
      %th= sort_link @search, :display_name, 'Name'
      %th= sort_link @search, :start_date
      %th.qty Total Registered
      %th.qty Participants
      %th.qty Team
      %th
  %tbody
    - events.each do |e|
      %tr
        %td= link_to_show(office_event_path(e), e.display_name)
        %td= l e.start_date
        %td.qty= e.registrations.ok.count
        %td.qty= e.registrations.ok.participants.count
        %td.qty= e.registrations.ok.team.count
        %td= link_to(icon('icon-user') + "Registrations", office_event_registrations_path(e))

= render 'filter'

= render 'office/shared/table_options', :table => events
