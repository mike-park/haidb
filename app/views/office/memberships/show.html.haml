.panel.panel-default
  .panel-heading
    = controls do |c|
      - c << edit_button

    %h3 Membership

  = render 'membership', membership: @membership

  - if @membership.audits.any?
    = render 'office/shared/audits', :audits => @membership.audits.descending

  .panel.panel-default
    .panel-heading
      = controls do |c|
        - c << new_button(label: 'New Registration', path: new_office_angel_registration_path(@membership.angel))
      %h4 Team #{pluralize(@membership.hai_workshops_team_registrations.size, 'registration')}

    - if @membership.hai_workshops_team_registrations.any?
      = render 'registrations', :registrations => @membership.hai_workshops_team_registrations

  .panel.panel-default
    .panel-heading
      %h4 AWS/TWS #{pluralize(@membership.team_workshops_registrations.size, 'registration')}

    - if @membership.team_workshops_registrations.any?
      = render 'registrations', :registrations => @membership.team_workshops_registrations
