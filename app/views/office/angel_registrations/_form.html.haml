= simple_form_for [:office, @angel, @registration], html: {class: 'form-horizontal'} do |r|
  -if @registration.errors.any?
    #error_explanation
      %h3= "#{pluralize(@registration.errors.count, "error")} prohibited this registration from being saved"

  = r.association :event, options_for_signup_events_select(r)
  = r.input :role, options_for_role(r)

  = render 'office/registrations/fields_contact', :form => r
  = render 'office/registrations/fields_requests', :form => r
  = render 'office/registrations/fields_payment', :form => r

  - if Site.uk?
    = r.input :clothing_conversation
    = r.input :reg_fee_received

  = render 'office/registrations/field_note', :form => r

  = r.input :checked_in
  = r.input :completed

  .form-actions
    = r.button :submit, class: 'btn-primary'


