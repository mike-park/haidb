- page_title "HAI DB: Office Dashboard"

- if @pending.count > 0
  .block
    .content
      = controls do |c|
        - add_button_to(c, 'Show pending registrations', :controller => :public_signups, :action => :index)

      .inner
        %h3 
          #{pluralize(@pending.count, "public signup")} pending approval.

- @events.each do |event|
  .block
    .content
      = controls do |c|
        - add_button_to(c, 'Show registrations', :controller => :registrations, :action => :index, :event_id => event)

      %h2 
        #{event.display_name} in #{time_ago_in_words(event.start_date)}

      .inner
        = render 'office/registrations/counts', :registrations => event.registrations
