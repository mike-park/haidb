= semantic_attributes_for angel do |attr|
  = attr.attributes :html => {:class => :column} do
    = attr.attribute :name, :value => angel.full_name
    = attr.attribute :phones, :value => compact_phones(angel)
  = attr.attributes :html => {:class => :column} do
    = attr.attribute :gender
    = attr.attribute :address, :value => compact_address(angel)
  = attr.attributes :html => {:class => :column} do
    = attr.attribute :email, :value => auto_link(angel.email)
  = attr.attributes :html => {:class => :column3} do
    = attr.attribute :notes
  - if local_assigns.has_key? :show_highest_level
    .wat-cf
    = attr.attributes :html => {:class => :column} do
      = attr.attribute :highest_level
.wat-cf
