%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Gender
      %th Event
      - if Site.uk?
        %th.center Cloth. Talk
        %th.center Reg Fee Rec
      %th Added

  %tbody
    - public_signups.each do |p|
      %tr
        %td= link_to_show([:office, p], p.full_name)
        %td= p.gender
        %td= p.event_name
        - if Site.uk?
          %td.center= checkmark_if(p.clothing_conversation)
          %td.center= checkmark_if(p.reg_fee_received)
        %td= time_ago_in_words(p.created_at)
