<div class="devise panel center-block">
  <div class="panel-body">
    <h2 id="signin-page">Sign in</h2>

    <%= vertical_form(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <%= f.input :email, :required => false, :autofocus => true %>
      <%= f.input :password, :required => false %>
      <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
      <%= f.button :submit, "Sign in", id: 'signin-button' %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>