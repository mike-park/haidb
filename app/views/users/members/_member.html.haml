- member = member.decorate
.list-group-item
  %div{class: "#{current_user.has_member?(member) ? 'bg-success' : ''}"}
    %span.name= member.full_name
    %span.role= "[#{member.role}]" if member.role.present?
    %span.notes= "Notes: #{member.notes}" if member.notes.present? && current_user.has_member?(member)