= simple_form_for(@angel, url: users_angel_path, :html => { class: 'form form-horizontal' }) do |f|
  = f.error_notification

  .form-inputs
    = f.input :email, disabled: true, hint: link_to('Click here if you need to change your email address', edit_user_registration_path)
    = f.input :first_name
    = f.input :last_name, :input_html => {:min => 3}
    = f.input :gender, options_for_gender(f)
    = f.input :address
    = f.input :postal_code
    = f.input :city
    = f.input :country, options_for_country(f)
    = f.input :home_phone
    = f.input :mobile_phone
    = f.input :work_phone
    = f.input :payment_method, options_for_payment_method(f)
    = f.input :bank_account_name,  :input_html => {:size => 30}
    = f.input :iban,  :input_html => {:size => 30}
    = f.input :bic,  :input_html => {:size => 30}

  .form-actions
    = f.button :submit, @angel.persisted? ? 'Update Profile' : 'Create Profile', id: 'submit_button'
