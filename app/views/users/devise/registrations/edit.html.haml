.panel
  .panel-body
    %h2 Changing login email or password

    %p
      Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aut dolores ducimus excepturi inventore iure maxime nobis nulla qui quod reprehenderit sapiente sint sit tempora tenetur, voluptatem. Autem deserunt magni recusandae!


    = vertical_form(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
      = f.error_notification

      = f.input :email

      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %p Currently waiting confirmation for: #{resource.unconfirmed_email}

      = f.input :password, :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :required => false
      = f.input :password_confirmation, :required => false
      = f.input :current_password, :hint => "we need your current password to confirm your changes", :required => true

      = f.button :submit, "Update"
