= semantic_form_for @public_signup do |f|
  = hidden_field_tag(:template_version, template_version)
  -if @public_signup.errors.any?
    #error_explanation
      %h2= t('enums.error')
  - else
    %p#lang
      - if language?(:de)
        If you prefer you may 
        = link_to('register in English.', new_public_signup_path(:locale => :en, template_version: template_version))
      - else
        Bitte melden Sie sich in 
        = link_to('Deutsch hier an.', new_public_signup_path(:locale => :de, template_version: template_version))


  %p.title
    = _('public_signup.form.title')

  .instructions= _('public_signup.form.introduction')

  = f.semantic_fields_for :registration do |r|
    = render "#{@basedir}/registration_form", :r => r

  = f.inputs do
    .instructions= _('public_signup.form.conditions')
    = f.input :terms_and_conditions, options_for_terms_and_conditions(f)

  = f.actions

