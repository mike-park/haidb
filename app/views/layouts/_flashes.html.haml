- if flash.alert
  .alert.alert-danger(ng-controller="AlertCtl" ng-show="visible" )
    %button(type="button" class="close" aria-hidden="true" ng-click="visible=!visible") &times;
    %strong= flash.alert
- if flash.notice
  .alert.alert-success(ng-controller="AlertCtl" ng-show="visible" )
    %button(type="button" class="close" aria-hidden="true" ng-click="visible=!visible") &times;
    %strong= flash.notice