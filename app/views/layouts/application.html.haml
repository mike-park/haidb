<!DOCTYPE html>
%html
  %head
    %title= @title || 'HAI Event Signup'
    = javascript_include_tag :defaults
    = formtastic_stylesheet_link_tag
    = stylesheet_link_tag 'public_signup', :media => 'all'
    = csrf_meta_tag

  %body{ :width => '560px' }
    #container
      #flash{ :'padding-left' => '60px' }
        - flash.each do |key, value|
          %div{ :class => "flash #{key}" }
            = value

      #content
        = yield

      .clear

      = debug(params) if Rails.env.development?

  :javascript
  = yield :javascript
